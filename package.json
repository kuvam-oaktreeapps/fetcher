{
  "name": "@oaktree/react-fetcher",
  "displayName": "Simple React Hooks Fetcher Library",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "javascript",
    "react",
    "typescript",
    "fetch",
    "fetch wrapper",
    "data fetching",
    "library"
  ],
  "author": {
    "name": "OaktreeApps",
    "email": "hello@oaktreeapps.com"
  },
  "description": "A type-safe simple and lightweight fetch wrapper for React.js applications with convenient functions for crafting & handling a request.",
  "version": "1.1.2",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "npx tsup src/index.ts --minify --format esm --clean --dts",
    "watch": "yarn build --watch",
    "prettify": "prettier --write \"src/**/*.{ts,js,json,tsx,jsx}\"",
    "test": "jest --detectOpenHandles --forceExit",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.6",
    "cheerio": "^1.0.0-rc.12",
    "eslint": "^8.43.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "puppeteer": "^20.7.3",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "react": "^18.2.0"
  }
}
